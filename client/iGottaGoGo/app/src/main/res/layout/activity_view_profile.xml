<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.underthejava.igottagogo.ViewProfileActivity">


    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:text="First Name"
        android:hint="FirstName"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.055" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="194dp"
        android:layout_height="56dp"
        android:text="Username"
        android:hint="Username"
        android:textSize="39sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        app:layout_constraintHorizontal_bias="0.046" />

    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="224dp"
        android:layout_height="54dp"
        android:text="Last Name"
        android:hint="LastName"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstName" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="229dp"
        android:layout_height="45dp"
        android:text="Email"
        android:hint="Email"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLastName" />

    <TextView
        android:id="@+id/tvCredits"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:text="Credits"
        android:hint="Credits"
        android:textSize="30sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"

        android:layout_alignTop="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail"

        app:layout_constraintVertical_bias="0.277" />

    <Button
        android:id="@+id/bEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:hint="Edit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvUserCredits"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:text=""
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvCredits"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"

        android:layout_alignTop="@+id/tvEmail"
        android:layout_alignStart="@+id/tvEmail"

        app:layout_constraintVertical_bias="0.084" />

</android.support.constraint.ConstraintLayout>
